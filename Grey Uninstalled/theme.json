{
  "name": "Grey Uninstalled",
  "author": "Kikus",
  "target": "Library",
  "version": "v1.0.1",
  "description": "Adds grayscale effect to uninstalled games for Big Picture view, with adjustable opacity and grayscale levels.",
  "manifest_version": 5,
  "inject": {
    "shared.css": ["bigpicture"]
  },
  "patches": {
    "Grayscale": {
      "type": "slider",
      "default": "100",
      "values": {
        "0": {
          "--uninstalled-grayscale": ["0%", "bigpicture"]
        },
        "10": {
          "--uninstalled-grayscale": ["10%", "bigpicture"]
        },
        "20": {
          "--uninstalled-grayscale": ["20%", "bigpicture"]
        },
        "30": {
          "--uninstalled-grayscale": ["30%", "bigpicture"]
        },
        "40": {
          "--uninstalled-grayscale": ["40%", "bigpicture"]
        },
        "50": {
          "--uninstalled-grayscale": ["50%", "bigpicture"]
        },
        "60": {
          "--uninstalled-grayscale": ["60%", "bigpicture"]
        },
        "70": {
          "--uninstalled-grayscale": ["70%", "bigpicture"]
        },
        "80": {
          "--uninstalled-grayscale": ["80%", "bigpicture"]
        },
        "90": {
          "--uninstalled-grayscale": ["90%", "bigpicture"]
        },
        "100": {
          "--uninstalled-grayscale": ["100%", "bigpicture"]
        }
      },
      "components": []
    },
    "Opacity": {
      "type": "slider",
      "default": "0.5",
      "values": {
        "0.5": {
          "--uninstalled-opacity": ["0.5", "bigpicture"]
        },
        "0.6": {
          "--uninstalled-opacity": ["0.6", "bigpicture"]
        },
        "0.7": {
          "--uninstalled-opacity": ["0.7", "bigpicture"]
        },
        "0.8": {
          "--uninstalled-opacity": ["0.8", "bigpicture"]
        },
        "0.9": {
          "--uninstalled-opacity": ["0.9", "bigpicture"]
        },
        "1": {
          "--uninstalled-opacity": ["1", "bigpicture"]
        }
      },
      "components": []
    },
    "Focused Grayscale": {
      "type": "slider",
      "default": "90",
      "values": {
        "0": {
          "--uninstalled-focus-grayscale": ["0%", "bigpicture"]
        },
        "10": {
          "--uninstalled-focus-grayscale": ["10%", "bigpicture"]
        },
        "20": {
          "--uninstalled-focus-grayscale": ["20%", "bigpicture"]
        },
        "30": {
          "--uninstalled-focus-grayscale": ["30%", "bigpicture"]
        },
        "40": {
          "--uninstalled-focus-grayscale": ["40%", "bigpicture"]
        },
        "50": {
          "--uninstalled-focus-grayscale": ["50%", "bigpicture"]
        },
        "60": {
          "--uninstalled-focus-grayscale": ["60%", "bigpicture"]
        },
        "70": {
          "--uninstalled-focus-grayscale": ["70%", "bigpicture"]
        },
        "80": {
          "--uninstalled-focus-grayscale": ["80%", "bigpicture"]
        },
        "90": {
          "--uninstalled-focus-grayscale": ["90%", "bigpicture"]
        },
        "100": {
          "--uninstalled-focus-grayscale": ["100%", "bigpicture"]
        }
      },
      "components": []
    },
    "Focused Opacity": {
      "type": "slider",
      "default": "0.9",
      "values": {
        "0.5": {
          "--uninstalled-focus-opacity": ["0.5", "bigpicture"]
        },
        "0.6": {
          "--uninstalled-focus-opacity": ["0.6", "bigpicture"]
        },
        "0.7": {
          "--uninstalled-focus-opacity": ["0.7", "bigpicture"]
        },
        "0.8": {
          "--uninstalled-focus-opacity": ["0.8", "bigpicture"]
        },
        "0.9": {
          "--uninstalled-focus-opacity": ["0.9", "bigpicture"]
        },
        "1": {
          "--uninstalled-focus-opacity": ["1", "bigpicture"]
        }
      },
      "components": []
    }
  }
}
